{
  "name": "casino-lab-backend",
  "version": "1.0.0",
  "description": "Online Casino Simulator - Backend Simulation Engine",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "tsx --test test/*.test.ts",
    "db:migrate": "node-pg-migrate up",
    "db:rollback": "node-pg-migrate down",
    "db:reset": "node scripts/reset-db.js"
  },
  "keywords": [
    "casino",
    "simulator",
    "fastify"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "dotenv": "^17.2.4",
    "fastify": "^5.2.1",
    "pg": "^8.13.1",
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/pg": "^8.11.10",
    "@types/seedrandom": "^3.0.8",
    "node-pg-migrate": "^7.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
